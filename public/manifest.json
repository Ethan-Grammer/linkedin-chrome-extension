{
  "manifest_version": 3,
  "name": "LinkedIn Profile Saver",
  "version": "1.0.0",
  "description": "Save LinkedIn profiles to Airtable",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "https://api.airtable.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/in/*", "*://*.linkedin.com/company/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "side_panel": {
    "default_path": "src/popup/index.html"
  },
  "options_page": "src/options/index.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
